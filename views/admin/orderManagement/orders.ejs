<%- include('../../partials/admin-header.ejs') %>

    <body class="bg-background-light dark:bg-background-dark font-display text-[#141414] dark:text-white">
        <%- include('../../partials/flash.ejs') %>
            <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
                <div class="flex min-h-screen">
                    <%- include('../../partials/sidebar.ejs') %>
                        <main class="flex-1 p-6 lg:p-10">
                            <div class="layout-content-container flex flex-col w-full">
                                <div class="flex flex-wrap justify-between gap-4 items-center mb-6">
                                    <div class="flex flex-col gap-1">
                                        <p
                                            class="text-[#141414] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em]">
                                            Orders
                                        </p>
                                        <p
                                            class="text-[#757575] dark:text-gray-400 text-base font-normal leading-normal">
                                            Manage all customer orders from this page.
                                        </p>
                                    </div>
                                </div>
                                <div
                                    class="flex flex-col rounded-xl border border-[#e0e0e0] dark:border-primary/20 bg-white dark:bg-[#1f1f1f]">
                                    <div class="p-6 flex flex-col md:flex-row justify-between items-center gap-4">
                                        <div>
                                            <h2
                                                class="text-[#141414] dark:text-white text-lg font-bold leading-tight tracking-[-0.015em]">
                                                All Orders
                                            </h2>
                                            <p class="text-[#757575] dark:text-gray-400 text-sm mt-1">
                                                A comprehensive list of all transactions.
                                            </p>
                                        </div>
                                        <div class="flex gap-4 items-center">
                                        <form method="GET" action="/admin/orders" class="w-full md:w-auto">
                                            <div class="relative">
                                                <input type="text" name="search"
                                                    value="<%= typeof search !== 'undefined' ? search : '' %>"
                                                    placeholder="Search Order ID..."
                                                    class="pl-10 pr-4 py-2 border border-[#e0e0e0] dark:border-primary/20 rounded-lg bg-white dark:bg-[#2f2f2f] text-sm focus:outline-none focus:ring-2 focus:ring-black/50 w-full md:w-64">
                                                <span
                                                    class="material-symbols-outlined absolute left-3 top-1.5 text-gray-400 text-lg">search</span>
                                            </div>
                                        </form>
                                        <a href="/admin/orders" class="px-4 py-1.5 border border-gray-300 rounded-lg">clear</a>
                                        </div>
                                    </div>
                                    <div class="overflow-x-auto">
                                        <table class="w-full text-left">
                                            <thead class="text-sm text-[#757575] dark:text-gray-400">
                                                <tr class="border-b border-t border-[#e0e0e0] dark:border-primary/20">
                                                    <th class="px-6 py-3 font-medium">Order ID</th>
                                                    <th class="px-6 py-3 font-medium">Customer Name</th>
                                                    <th class="px-6 py-3 font-medium">Order Date</th>
                                                    <th class="px-6 py-3 font-medium">Status</th>
                                                    <th class="px-6 py-3 font-medium text-right">Total Amount</th>
                                                    <th class="px-6 py-3 font-medium text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (orders && orders.length> 0) { %>
                                                    <% orders.forEach(order=> { %>
                                                        <tr
                                                            class="border-b border-[#e0e0e0] dark:border-primary/20 hover:bg-gray-50 dark:hover:bg-[#2f2f2f] transition-colors">
                                                            <td
                                                                class="px-6 py-4 font-medium text-[#141414] dark:text-white">
                                                                #<%= order.orderId.split('-')[2] %>
                                                            </td>
                                                            <td class="px-6 py-4 text-[#757575] dark:text-gray-400">
                                                                <%= order.user ? order.user.name : 'Unknown User' %>
                                                            </td>
                                                            <td class="px-6 py-4 text-[#757575] dark:text-gray-400">
                                                                <%= order.createdAt.toLocaleDateString('en-IN',
                                                                    {month: 'short' , day: 'numeric' , year: 'numeric'
                                                                    }) %>
                                                            </td>
                                                            <td class="px-6 py-4">
                                                                <% let statusClasses='' ; switch (order.status) {
                                                                    case 'Pending' :
                                                                    statusClasses='bg-yellow-100 text-yellow-700 dark:bg-yellow-900/50 dark:text-yellow-300'
                                                                    ; break; case 'Processing' :
                                                                    statusClasses='bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300'
                                                                    ; break; case 'Shipped' :
                                                                    statusClasses='bg-indigo-100 text-indigo-700 dark:bg-indigo-900/50 dark:text-indigo-300'
                                                                    ; break; case 'Delivered' :
                                                                    statusClasses='bg-green-100 text-green-700 dark:bg-green-900/50 dark:text-green-300'
                                                                    ; break; case 'Cancelled' :
                                                                    statusClasses='bg-red-100 text-red-700 dark:bg-red-900/50 dark:text-red-300'
                                                                    ; break; case 'Returned' :
                                                                    statusClasses='bg-orange-100 text-orange-700 dark:bg-orange-900/50 dark:text-orange-300'
                                                                    ; break; case 'Return Request' :
                                                                    statusClasses='bg-orange-100 text-orange-700 dark:bg-orange-900/50 dark:text-orange-300'
                                                                    ; break; default:
                                                                    statusClasses='bg-gray-100 text-gray-700 dark:bg-gray-900/50 dark:text-gray-300'
                                                                    ; } %>
                                                                    <span
                                                                        class="<%= statusClasses %> text-xs font-medium px-2.5 py-1 rounded-full">
                                                                        <%= order.status %>
                                                                    </span>
                                                            </td>
                                                            <td
                                                                class="px-6 py-4 text-right font-medium text-[#141414] dark:text-white">
                                                                â‚¹<%= order.totalAmount.toLocaleString() %>
                                                            </td>
                                                            <td class="px-6 py-4 text-center">
                                                                <div class="flex justify-center gap-2">
                                                                    <a href="/admin/orders/details/<%= order._id %>"
                                                                        class="p-2 hover:bg-gray-100 dark:hover:bg-primary/30 rounded-full text-gray-500 hover:text-black dark:text-gray-400 dark:hover:text-white transition-colors">
                                                                        <span
                                                                            class="material-symbols-outlined text-lg">visibility</span>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="6"
                                                                        class="px-6 py-12 text-center text-gray-500">
                                                                        No orders found.
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- Pagination -->
                                    <% if (typeof totalPages !=='undefined' && totalPages> 1) { %>
                                        <div
                                            class="p-4 flex justify-between items-center text-sm border-t border-[#e0e0e0] dark:border-primary/20">
                                            <p class="text-[#757575] dark:text-gray-400">
                                                Showing <%= skip + 1 %> to <%= Math.min(skip + limit, totalOrders) %> of
                                                        <%= totalOrders %> orders
                                            </p>
                                            <div class="flex gap-2 items-center">
                                                <a href="/admin/orders?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>"
                                                    class="px-3 py-1 border border-[#e0e0e0] dark:border-primary/20 rounded-md hover:bg-gray-100 dark:hover:bg-primary/30 <%= currentPage === 1 ? 'pointer-events-none opacity-50' : '' %>">
                                                    Previous
                                                </a>
                                                <span class="px-2 text-gray-600 dark:text-gray-400">Page <%= currentPage
                                                        %> of <%= totalPages %></span>
                                                <a href="/admin/orders?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>"
                                                    class="px-3 py-1 border border-[#e0e0e0] dark:border-primary/20 rounded-md hover:bg-gray-100 dark:hover:bg-primary/30 <%= currentPage === totalPages ? 'pointer-events-none opacity-50' : '' %>">
                                                    Next
                                                </a>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </main>
                </div>
            </div>
    </body>

    </html>