<%- include('../../partials/admin-header.ejs') %>
    <body
        class="bg-background-light dark:bg-background-dark font-display text-[#141414] dark:text-white"
    >
    <%- include('../../partials/flash.ejs') %>
        <div
            class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden"
        >
            <div class="flex min-h-screen">
                <%- include("../../partials/sidebar.ejs") %>
                <main class="flex-1 p-6 lg:p-10">
                    <div class="layout-content-container flex flex-col w-full">
                        <div
                            class="flex flex-wrap justify-between gap-4 items-center mb-6"
                        >
                            <div class="flex flex-col gap-1">
                                <p
                                    class="text-[#141414] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em]"
                                >
                                    Customers
                                </p>
                                <p
                                    class="text-[#757575] dark:text-gray-400 text-base font-normal leading-normal"
                                >
                                    Manage all customers from this page.
                                </p>
                            </div>
                        </div>
                        <div
                            class="flex flex-col rounded-xl border border-[#e0e0e0] dark:border-primary/20 bg-white dark:bg-[#1f1f1f]"
                        >
                            <div
                                class="p-6 border-b border-[#e0e0e0] dark:border-primary/20"
                            >
                                <div
                                    class="flex flex-col sm:flex-row gap-4 justify-between items-center"
                                >
                                    <form
                                        action="/admin/customers"
                                        method="get"
                                    >
                                        <div
                                            class="relative w-full sm:max-w-xs"
                                        >
                                            <span
                                                class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
                                                >search</span
                                            >
                                            <input
                                                class="pl-10 pr-4 py-2 w-full border border-[#e0e0e0] dark:border-primary/20 rounded-lg bg-transparent focus:ring-2 focus:ring-primary/50 dark:focus:ring-white/50 focus:outline-none"
                                                placeholder="Search customers..."
                                                name="search"
                                                type="text"
                                                value="<%= typeof search !== 'undefined' ? search : '' %>"
                                            />
                                        </div>
                                    </form>
                                    <a
                                        href="/admin/customers"
                                        class="w-full sm:w-auto flex items-center justify-center gap-2 border border-[#e0e0e0] dark:border-primary/20 text-[#141414] dark:text-white font-medium px-4 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-primary/30"
                                    >
                                        <span
                                            class="material-symbols-outlined text-lg"
                                            >close</span
                                        >
                                        Clear
                                    </a>
                                </div>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left">
                                    <thead
                                        class="text-sm text-[#757575] dark:text-gray-400"
                                    >
                                        <tr
                                            class="border-b border-t border-[#e0e0e0] dark:border-primary/20"
                                        >
                                            <th class="px-6 py-3 font-medium">
                                                Avatar
                                            </th>
                                            <th class="px-6 py-3 font-medium">
                                                Name
                                            </th>
                                            <th class="px-6 py-3 font-medium">
                                                Email
                                            </th>
                                            <th
                                                class="px-6 py-3 font-medium text-center"
                                            >
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(user => { %>
                                        <tr
                                            class="border-b border-[#e0e0e0] dark:border-primary/20"
                                        >
                                            <td
                                                class="px-6 py-4 font-medium text-[#141414] dark:text-white"
                                            >
                                            <% if (user.avatar) { %>
                                                <img src="<%= user.avatar %>" alt="Profile pic" class="rounded-full size-12">
                                            <% } else { %>
                                                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-200 dark:bg-gray-700">
                                                    <span
                                                        class="material-symbols-outlined text-lg text-gray-600 dark:text-gray-300"
                                                        >person</span
                                                    >
                                                </div>
                                            <% } %>
                                            </td>
                                            <td
                                                class="px-6 py-4 font-medium text-[#141414] dark:text-white"
                                            >
                                                <%= user.name %>
                                            </td>
                                            <td
                                                class="px-6 py-4 text-[#757575] dark:text-gray-400"
                                            >
                                                <%= user.email %>
                                            </td>
                                            <td class="px-6 py-4 text-center">
                                                <div
                                                    class="flex justify-center gap-2"
                                                >
                                                    <% if (user.isBlocked) { %>
                                                        <form action="/admin/customers/block/<%= user._id %>?block=false&_method=PUT" method="post">
                                                            <button
                                                                type="submit"
                                                                onclick="confirmUnblock(event, this.form.action)"
                                                                class="flex items-center gap-1.5 px-3 py-1.5 rounded-md text-sm font-medium text-green-600 dark:text-green-400 bg-green-500/10 hover:bg-green-500/20"
                                                            >
                                                                <span
                                                                    class="material-symbols-outlined text-base"
                                                                    >check_circle</span
                                                                >
                                                                Unblock
                                                            </button>
                                                        </form>
                                                    <% } else { %>
                                                        <form action="/admin/customers/block/<%= user._id %>?block=true&_method=PUT" method="post">
                                                            <button
                                                                type="submit"
                                                                onclick="confirmBlock(event, this.form.action)"
                                                                class="flex items-center gap-1.5 px-3 py-1.5 rounded-md text-sm font-medium text-red-600 dark:text-red-400 bg-red-500/10 hover:bg-red-500/20"
                                                            >
                                                                <span
                                                                    class="material-symbols-outlined text-base"
                                                                    >block</span
                                                                >
                                                                Block
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <div
                                class="p-4 flex justify-between items-center text-sm border-t border-[#e0e0e0] dark:border-primary/20"
                            >
                                <span>Page <%= page %> of <%= totalPages %></span>
                                <div class="flex gap-2 items-center">
                                    <a
                                        class="px-3 py-1 border border-[#e0e0e0] dark:border-primary/20 rounded-md hover:bg-gray-100 dark:hover:bg-primary/30 disabled:opacity-50"
                                        href="/admin/customers?page=<%= page - 1 %>"
                                    >
                                        Previous
                                    </a>
                                    <a
                                        class="px-3 py-1 border border-[#e0e0e0] dark:border-primary/20 rounded-md hover:bg-gray-100 dark:hover:bg-primary/30"
                                        href="/admin/customers?page=<%= page + 1 %>"
                                    >
                                        Next
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <script>
            function confirmBlock(e, url) {
                e.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You can revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, block it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = e.target.closest("form");
                        form.submit();
                    }
                });
            };
            function confirmUnblock(e, url) {
                e.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You can revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Unblock it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = e.target.closest("form");
                        form.submit();
                    }
                });
            };
        </script>
    </body>
</html>
