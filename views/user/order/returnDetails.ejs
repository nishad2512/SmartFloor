<%- include("../../partials/header.ejs") %>

    <body
        class="bg-background-light text-black font-display antialiased min-h-[90vh] flex flex-col selection:bg-black selection:text-white">
        <main class="flex-grow pb-24">
            <div class="px-6 md:px-12 lg:px-20 mx-auto min-h-[80vh] max-w-[1400px]">
                <div
                    class="flex flex-col md:flex-row md:items-end justify-between gap-6 pb-8 border-b border-[#f2f2f2] mb-10">
                    <div class="space-y-2">
                        <div class="flex items-center gap-4">
                            <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-black">
                                Return Details
                            </h1>
                        </div>
                        <p class="text-[#757575] text-sm md:text-base">
                            Request placed on <%= returnDoc.createdAt.toDateString() %>
                        </p>
                    </div>
                </div>
                <div class="mb-16 bg-surface-light/30 rounded-2xl border border-[#f2f2f2] p-8 md:p-10">
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-10 gap-4">
                        <div>
                            <h2 class="text-xl font-bold text-black mb-1">
                                Return Status
                            </h2>
                        </div>
                        <% let statusClass="bg-gray-100 text-gray-800 border-gray-200" ; let dotClass="bg-gray-500" ;
                            let trackerStatus=returnDoc ? returnDoc.status : item.status; if
                            (trackerStatus==='Return Request' ) {
                            statusClass="bg-yellow-50 text-yellow-700 border-yellow-200" ; dotClass="bg-yellow-500" ; }
                            else if (trackerStatus==='Approved' ) {
                            statusClass="bg-blue-50 text-blue-700 border-blue-200" ; dotClass="bg-blue-500" ; } else if
                            (trackerStatus==='Picked' ) { statusClass="bg-purple-50 text-purple-700 border-purple-200" ;
                            dotClass="bg-purple-500" ; } else if (trackerStatus==='Returned' ) {
                            statusClass="bg-green-50 text-green-700 border-green-200" ; dotClass="bg-green-500" ; } else
                            if (trackerStatus==='Cancelled' ) { statusClass="bg-red-50 text-red-700 border-red-200" ;
                            dotClass="bg-red-500" ; } %>
                            <div
                                class="px-4 py-2 <%= statusClass %> rounded-lg text-sm font-bold tracking-wide uppercase border flex items-center gap-2">
                                <span class="relative flex h-2.5 w-2.5">
                                    <span
                                        class="animate-ping absolute inline-flex h-full w-full rounded-full <%= dotClass %> opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-2.5 w-2.5 <%= dotClass %>"></span>
                                </span>
                                <%= trackerStatus %>
                            </div>
                    </div>
                    <% const statuses=["Return Request", "Approved" , "Picked" , "Returned" ]; let
                        currentStep=statuses.indexOf(trackerStatus); if (currentStep===-1 && trackerStatus==='Refunded'
                        ) currentStep=3; let progress=0; if (currentStep===0) progress=0; else if (currentStep===1)
                        progress=38; else if (currentStep===2) progress=70; else if (currentStep>= 3) progress = 100;

                        if (trackerStatus === 'Cancelled') {
                        currentStep = -1;
                        progress = 0;
                        }
                        %>
                        <div class="relative">
                            <div class="absolute top-[14px] left-4 right-4 h-0.5 bg-[#e0e0e0] hidden md:block z-0">
                            </div>
                            <div class="absolute top-[14px] left-4 h-0.5 bg-black hidden md:block z-0 transition-all duration-1000"
                                style="width: <%= progress %>%;"></div>
                            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-4 relative z-10">
                                <div class="flex md:flex-col items-center md:items-start gap-4 md:gap-0 group">
                                    <div class="flex flex-col items-center md:items-start w-full">
                                        <div class="md:w-full md:mb-4 flex md:block items-center">
                                            <div
                                                class="w-8 h-8 rounded-full <%= currentStep >= 0 ? 'bg-black border-4 border-white' : 'bg-white border-2 border-[#e0e0e0]' %> shadow-sm flex items-center justify-center shrink-0 md:ml-0 md:-ml-1.5 transition-colors duration-300">
                                                <i
                                                    class="ph ph-bold ph-check <%= currentStep >= 0 ? 'text-white' : 'text-transparent' %>"></i>
                                            </div>
                                            <div
                                                class="md:hidden w-0.5 h-12 <%= currentStep > 0 ? 'bg-black' : 'bg-[#e0e0e0]' %> absolute left-[19px] top-8">
                                            </div>
                                        </div>
                                        <div class="pl-4 md:pl-0 pt-1 md:pt-0">
                                            <h4
                                                class="font-bold text-sm <%= currentStep >= 0 ? 'text-black' : 'text-[#bdbdbd]' %>">
                                                Return Requested
                                            </h4>
                                            <p class="text-xs text-[#757575] mt-0.5">
                                                <%= order.updatedAt.toLocaleDateString('en-US', { month: 'short' ,
                                                    day: 'numeric' }) %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex md:flex-col items-center md:items-start gap-4 md:gap-0 group">
                                    <div class="flex flex-col items-center md:items-center w-full">
                                        <div class="md:w-full md:mb-4 flex md:justify-center items-center">
                                            <div
                                                class="w-8 h-8 rounded-full <%= currentStep >= 1 ? 'bg-black border-4 border-white' : 'bg-white border-2 border-[#e0e0e0]' %> shadow-sm flex items-center justify-center shrink-0 transition-colors duration-300">
                                                <i
                                                    class="ph ph-bold ph-check <%= currentStep >= 1 ? 'text-white' : 'text-transparent' %>"></i>
                                            </div>
                                            <div
                                                class="md:hidden w-0.5 h-16 <%= currentStep > 1 ? 'bg-black' : 'bg-[#e0e0e0]' %> absolute left-[19px] -translate-y-[2rem]">
                                            </div>
                                        </div>
                                        <div class="pl-4 md:pl-0 pt-1 md:pt-0 md:text-center">
                                            <h4
                                                class="font-bold text-sm <%= currentStep >= 1 ? 'text-black' : 'text-[#bdbdbd]' %>">
                                                Approved
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex md:flex-col items-center md:items-start gap-4 md:gap-0 group">
                                    <div class="flex flex-col items-center md:items-center w-full">
                                        <div class="md:w-full md:mb-4 flex md:justify-center items-center">
                                            <div
                                                class="w-8 h-8 rounded-full <%= currentStep >= 2 ? 'bg-black border-4 border-white' : 'bg-white border-2 border-[#e0e0e0]' %> shadow-sm flex items-center justify-center shrink-0 transition-colors duration-300">
                                                <i
                                                    class="ph ph-bold ph-check <%= currentStep >= 2 ? 'text-white' : 'text-transparent' %>"></i>
                                            </div>
                                            <div
                                                class="md:hidden w-0.5 h-16 <%= currentStep > 2 ? 'bg-black' : 'bg-[#e0e0e0]' %> absolute left-[19px] -translate-y-[2rem]">
                                            </div>
                                        </div>
                                        <div class="pl-4 md:pl-0 pt-1 md:pt-0 md:text-center">
                                            <h4
                                                class="font-bold text-sm <%= currentStep >= 2 ? 'text-black' : 'text-[#bdbdbd]' %>">
                                                Item Picked
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex md:flex-col items-center md:items-start gap-4 md:gap-0 group">
                                    <div class="flex flex-col items-center md:items-end w-full">
                                        <div class="md:w-full md:mb-4 flex md:justify-end items-center">
                                            <div
                                                class="w-8 h-8 rounded-full <%= currentStep >= 3 ? 'bg-black border-4 border-white' : 'bg-white border-2 border-[#e0e0e0]' %> flex items-center justify-center shrink-0 md:mr-0 md:-mr-1.5 transition-colors duration-300">
                                                <i
                                                    class="ph ph-bold ph-check <%= currentStep >= 3 ? 'text-white' : 'text-transparent' %>"></i>
                                            </div>
                                        </div>
                                        <div class="pl-4 md:pl-0 pt-1 md:pt-0 text-right">
                                            <h4
                                                class="font-medium text-sm <%= currentStep >= 3 ? 'text-black' : 'text-[#bdbdbd]' %>">
                                                Refunded
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                    <div class="lg:col-span-8 flex flex-col gap-12">
                        <section>
                            <h3 class="text-xl font-bold mb-6 font-display">
                                Product Details
                            </h3>
                            <div class="flex flex-col gap-8">
                                <div
                                    class="group flex flex-col sm:flex-row gap-6 items-start pb-8 border-b border-[#f2f2f2] last:border-0">
                                    <div
                                        class="relative overflow-hidden rounded-xl bg-surface-light w-full sm:w-36 aspect-square shrink-0 border border-[#f2f2f2]">
                                        <div class="w-full h-full bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                                            data-alt="Close up texture of light french oak wood flooring" style="
                                            background-image: url('<%= item.product.productImages[0] %>');
                                        "></div>
                                    </div>
                                    <div class="flex-1 w-full pt-1">
                                        <div class="flex flex-col md:flex-row md:justify-between gap-4">
                                            <div>
                                                <h4 class="text-lg font-bold text-black mb-1">
                                                    <%= item.product.name %>
                                                </h4>
                                                <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-[#757575]">
                                                    <p>
                                                        <span class="font-medium text-black">Size:</span>
                                                        <%= variant.size %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="text-left md:text-right">
                                                <p class="text-lg font-bold text-black">
                                                    ₹<%= item.subTotal.toLocaleString('en-IN') %>
                                                </p>
                                                <p class="text-sm text-[#757575]">
                                                    ₹<%= variant.price.toLocaleString('en-IN') %> / sq ft
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mt-4 flex items-center justify-between">
                                            <div
                                                class="flex items-center gap-2 bg-surface-light px-3 py-1.5 rounded-md text-sm">
                                                <span class="font-medium text-black">Qty:</span>
                                                <span class="text-[#757575]">
                                                    <%= item.quantity %> sq.ft
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="lg:col-span-4">
                        <div class="sticky top-28 space-y-6">
                            <div
                                class="bg-surface-light/30 border border-[#f2f2f2] rounded-2xl p-6 md:p-8 shadow-[0_2px_20px_rgba(0,0,0,0.02)]">
                                <h3 class="text-xl font-bold mb-6 font-display">
                                    Return Summary
                                </h3>
                                <div class="space-y-4 text-sm">
                                    <div class="flex justify-between text-[#757575]">
                                        <span>Refund Amount</span>
                                        <span class="font-medium text-black">
                                            ₹<%= item.subTotal.toLocaleString('en-IN') %>
                                        </span>
                                    </div>
                                </div>
                                <div class="my-6 border-t border-[#e0e0e0] border-dashed"></div>
                                <div class="flex justify-between items-baseline mb-2">
                                    <span class="font-bold text-lg">Total Refund</span>
                                    <span class="font-bold text-3xl tracking-tight">
                                        ₹<%= item.subTotal.toLocaleString('en-IN') %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        </div>
        <%- include('../../partials/footer.ejs') %>
    </body>

    </html>