<%- include("../../partials/header.ejs") %>

    <div class="flex flex-col md:flex-row gap-[200px] py-12 min-h-[90vh]">
        <!-- Sidebar -->
        <%- include("../../partials/user-sidebar.ejs") %>

            <!-- Main Content -->
            <div class="flex-1 max-w-4xl">
                <div class="mb-10">
                    <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
                        <div class="flex flex-col gap-2">
                            <h2 class="text-4xl font-extrabold text-[#1A1A1A] leading-tight tracking-[-0.033em]">
                                My Addresses
                            </h2>
                            <p class="text-gray-500 text-base font-medium">
                                View and manage your saved addresses for a faster checkout experience.
                            </p>
                        </div>
                        <a href="/profile/addresses/add"
                            class="flex items-center justify-center gap-2 px-6 py-3 rounded-full bg-black text-white text-sm font-bold shadow-lg shadow-black/20 hover:bg-gray-800 transition-all hover:-translate-y-0.5">
                            <i class="ph-bold ph-plus-circle text-xl"></i>
                            <span>Add New Address</span>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 gap-6">
                        <!-- Address Card 1 -->
                         <% addresses.forEach(address => { %>
                        <div
                            class="bg-white rounded-2xl border border-gray-100 p-6 flex flex-col sm:flex-row items-start justify-between gap-6 hover:shadow-lg transition-shadow duration-300">
                            <div class="flex items-start gap-5">
                                <div
                                    class="size-12 rounded-full bg-gray-50 flex items-center justify-center shrink-0 text-[#1A1A1A]">
                                    <i class="ph-bold ph-<%= address.type == 'Home' ? 'house' : address.type == 'Work' ? 'briefcase' : 'building' %> text-xl"></i>
                                </div>
                                <div class="flex flex-col gap-1">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-black/5 text-[#1A1A1A] w-fit mb-1">
                                        <%= address.type %>
                                    </span>
                                    <p class="text-[#1A1A1A] font-bold text-lg"><%= address.name %> <span class="ml-2 text-gray-700 text-sm"><%= address.phone %></span></p>
                                    <p class="text-gray-500 text-sm leading-relaxed">
                                        <%= address.address1 %><br />
                                        <%= address.address2 %> &emsp;- <%= address.zip %>
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 shrink-0">
                                <a href="/profile/addresses/edit/<%= address._id %>"
                                    class="size-10 flex items-center justify-center rounded-full border border-gray-200 text-[#1A1A1A] hover:bg-black hover:text-white hover:border-black transition-colors">
                                    <i class="ph-bold ph-pencil-simple text-lg"></i>
                                </a>
                                <form action="/profile/addresses/delete/<%= address._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this address?');">
                                    <button
                                        class="size-10 flex items-center justify-center rounded-full border border-gray-200 text-red-500 hover:bg-red-50 hover:border-red-200 transition-colors">
                                        <i class="ph-bold ph-trash text-lg"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }) %>
                        <!-- Address Card 2 -->
                    </div>
                </div>
            </div>
    </div>

    <%- include("../../partials/footer.ejs") %>
        </body>

        </html>