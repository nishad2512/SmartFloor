<%- include("../../partials/header.ejs") %>

<div class="flex flex-col md:flex-row gap-[200px] py-12 min-h-[90vh]">
    <!-- Sidebar -->
    <%- include("../../partials/user-sidebar.ejs") %>

    <!-- Main Content -->
    <main class="flex-1 max-w-4xl">
        <div class="mb-10">
            <h2 class="text-4xl font-extrabold text-[#1A1A1A] mb-3">
                Edit Details
            </h2>
            <p class="text-gray-500 text-base">
                Update your personal information.
            </p>
        </div>

        <div class="space-y-12">
            <!-- Edit Form -->
            <section>
                <div
                    class="flex items-center justify-between border-b border-gray-100 pb-4 mb-6"
                >
                    <h3 class="text-xl font-bold text-[#1A1A1A]">
                        Personal Information
                    </h3>
                </div>
                <div
                    class="bg-white rounded-2xl border border-gray-100 p-6 hover:shadow-lg transition-shadow duration-300"
                >
                    <form
                        action="/profile/details/edit?_method=patch"
                        method="post"
                        enctype="multipart/form-data"
                        class="space-y-6"
                    >
                        <div>
                            <label
                                class="block text-sm font-medium text-[#1A1A1A] mb-4"
                                >Profile Picture</label
                            >
                            <div class="flex items-center gap-5">
                                <label for="image" class="cursor-pointer">
                                    <div
                                        class="size-20 rounded-full bg-gray-50 flex items-center justify-center overflow-hidden border-2 border-gray-200 hover:border-[#1A1A1A] transition-colors"
                                    >
                                        <img
                                            id="profilePreview"
                                            src="<%= user.avatar ? user.avatar : 'https://picsum.photos/100/100' %>"
                                            class="w-full h-full object-cover"
                                            alt="profile photo"
                                        />
                                    </div>
                                </label>
                                <input
                                    type="file"
                                    name="image"
                                    id="image"
                                    accept="image/*"
                                    class="hidden"
                                    onchange="previewImage(event)"
                                />
                                <div>
                                    <p
                                        class="text-[#1A1A1A] font-bold text-base"
                                    >
                                        Change Profile Picture
                                    </p>
                                    <p class="text-gray-500 text-sm">
                                        Click the image to upload a new one
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-[#1A1A1A] mb-2"
                                >Full Name</label
                            >
                            <input
                                type="text"
                                name="name"
                                id="name"
                                value="<%= user.name %>"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#1A1A1A] focus:border-transparent"
                                placeholder="Enter your full name"
                                required
                            />
                        </div>
                        <div>
                            <label
                                for="phone"
                                class="block text-sm font-medium text-[#1A1A1A] mb-2"
                            >
                                Phone Number
                            </label>

                            <div class="flex gap-3">
                                <input
                                    type="text"
                                    id="phone"
                                    name="phone"
                                    value="<%= user.phone %>"
                                    class="flex-1 px-4 py-3 border border-gray-300 rounded-lg"
                                    placeholder="+91XXXXXXXXXX"
                                />

                                <button
                                    type="button"
                                    id="sendOtpBtn"
                                    class="px-4 py-3 bg-black text-white rounded-lg"
                                >
                                    Verify
                                </button>
                            </div>

                            <p
                                id="otpMsg"
                                class="text-sm mt-2 text-green-600 hidden"
                            >
                                OTP sent successfully
                            </p>
                        </div>

                        <!-- OTP Box -->
                        <div id="otpBox" class="hidden mt-4">
                            <input
                                type="text"
                                id="otp"
                                placeholder="Enter OTP"
                                name="otp"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg"
                            />

                            <button
                                type="button"
                                onclick="verifyOtp()"
                                class="mt-3 px-4 py-3 bg-green-600 text-white rounded-lg"
                            >
                                Confirm OTP
                            </button>
                        </div>

                        <div class="flex gap-4">
                            <button
                                type="submit"
                                class="px-6 py-3 bg-[#1A1A1A] text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors"
                            >
                                Save Changes
                            </button>
                            <a
                                href="/profile/details"
                                class="px-6 py-3 border border-gray-300 text-[#1A1A1A] font-semibold rounded-lg hover:bg-gray-100 transition-colors"
                                >Cancel</a
                            >
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </main>
</div>

<script>
    function previewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("profilePreview").src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
    const sendOtpBtn = document.getElementById("sendOtpBtn");
    const otpBox = document.getElementById("otpBox");
    const otpMsg = document.getElementById("otpMsg");

    sendOtpBtn.addEventListener("click", async () => {
        const phone = document.getElementById("phone").value;

        if (!phone) return alert("Enter phone number");

        const res = await fetch("/profile/send-otp", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ phone }),
        });

        const data = await res.json();

        if (data.success) {
            otpMsg.classList.remove("hidden");
            otpBox.classList.remove("hidden");
        } else {
            alert(data.message);
        }
    });

    async function verifyOtp() {
        const phone = document.getElementById("phone").value;
        const otp = document.getElementById("otp").value;

        const res = await fetch("/profile/verify-otp", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ phone, otp }),
        });

        const data = await res.json();

        if (data.success) {
            alert("Phone number verified!");
            otpBox.classList.add("hidden");
            otpMsg.classList.add("hidden");
        } else {
            alert("Invalid OTP");
        }
    }
</script>

<%- include("../../partials/footer.ejs") %>
