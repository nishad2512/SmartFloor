<%- include("../../partials/header.ejs") %>

    <div class="flex flex-col md:flex-row gap-[200px] py-12 min-h-[90vh]">
        <!-- Sidebar -->
        <%- include("../../partials/user-sidebar.ejs") %>

        <!-- Main Content -->
        <main class="flex-1 max-w-4xl">
            <div class="mb-10">
                <h2 class="text-4xl font-extrabold text-[#1A1A1A] mb-3">My Details</h2>
                <p class="text-gray-500 text-base">Manage your personal information.</p>
            </div>

            <div class="space-y-12">
                <!-- Contact Info -->
                <section>
                    <div class="flex items-center justify-between border-b border-gray-100 pb-4 mb-6">
                        <h3 class="text-xl font-bold text-[#1A1A1A]">Contact Information</h3>
                    </div>
                    <div
                        class="bg-white rounded-2xl border border-gray-100 p-6 flex flex-col sm:flex-row items-center justify-between gap-6 hover:shadow-lg transition-shadow duration-300 mb-6">
                        <div class="flex items-center gap-5 w-full">
                            <div
                                class="size-12 rounded-full bg-gray-50 flex items-center justify-center shrink-0 text-[#1A1A1A]">
                                <img src="<%= user.avatar ? user.avatar : 'https://picsum.photos/100/100' %>" class="rounded-full" alt="profile photo">
                            </div>
                            <div>
                                <p class="text-[#1A1A1A] font-bold text-base"><%= user.name %></p>
                                <p class="text-gray-500 text-sm"><%= user.phone ? user.phone : 'Register a mobile number!' %></p>
                            </div>
                        </div>
                        <a
                            href="/profile/details/edit"
                            class="px-5 py-2.5 rounded-full border border-gray-200 text-sm font-bold text-[#1A1A1A] hover:bg-black hover:text-white hover:border-black transition-colors shrink-0">
                            Edit
                        </a>
                    </div>
                    <div
                        class="bg-white rounded-2xl border border-gray-100 p-6 flex flex-col sm:flex-row items-center justify-between gap-6 hover:shadow-lg transition-shadow duration-300">
                        <a
                            href="/profile/change-mail"
                            class="px-5 py-2.5 rounded-full border border-gray-200 text-sm font-bold text-[#1A1A1A] hover:bg-black hover:text-white hover:border-black transition-colors shrink-0">
                            Change Email
                        </a>
                        <% if (!isGoogle) { %>
                            <a
                                href="/forgot-password"
                                class="px-5 py-2.5 rounded-full border border-gray-200 text-sm font-bold text-[#1A1A1A] hover:bg-black hover:text-white hover:border-black transition-colors shrink-0">
                                Forgot Password
                            </a>
                        <% } %>
                    </div>
                </section>

                <!-- Referral -->
                <section>
                    <div class="flex items-center justify-between border-b border-gray-100 pb-4 mb-6">
                        <h3 class="text-xl font-bold text-[#1A1A1A]">Referral</h3>
                    </div>
                    <div class="space-y-4">
                        <div class="bg-white rounded-2xl border border-gray-100 p-6 flex flex-col sm:flex-row items-center justify-between gap-6 hover:shadow-lg transition-all duration-300">
                            <div class="flex items-center gap-5 w-full">
                                <div class="size-12 rounded-full bg-gray-50 flex items-center justify-center shrink-0 text-[#1A1A1A]">
                                    <i class="ph-bold ph-users text-xl"></i>
                                </div>
                                <div>
                                    <p class="text-[#1A1A1A] font-black text-lg tracking-wider font-mono mb-1 uppercase"><%= user.referral %></p>
                                    <p class="text-gray-500 text-sm leading-relaxed">
                                        Refer users using this code to get <span class="font-bold text-gray-800">â‚¹100</span> for each referral
                                    </p>
                                </div>
                            </div>
                            
                            <button
                                id="copyBtn"
                                onclick="copyReferral('<%= user.referral %>')"
                                class="flex items-center gap-2 px-6 py-2.5 rounded-full border border-gray-200 text-sm font-bold text-[#1A1A1A] hover:bg-black hover:text-white hover:border-black transition-all duration-300 shrink-0 min-w-[100px] justify-center"
                            >
                                <i id="copyIcon" class="ph-bold ph-copy"></i>
                                <span id="copyText">Copy</span>
                            </button>
                        </div>

                        </div>
                </section>

                <!-- Billing Info -->
            </div>
        </main>
    </div>

    </div> <!-- Close the header container -->
    <%- include("../../partials/footer.ejs") %>
    <script>
        function copyReferral(code) {
            // Copy to clipboard
            navigator.clipboard.writeText(code).then(() => {
                const btn = document.getElementById('copyBtn');
                const text = document.getElementById('copyText');
                const icon = document.getElementById('copyIcon');

                // 1. Apply "Success" styles
                btn.classList.add('bg-green-600', 'text-white', 'border-green-600');
                btn.classList.remove('text-[#1A1A1A]', 'hover:bg-black', 'hover:border');
                text.innerText = 'Copied!';
                icon.className = 'ph-bold ph-check'; // Change icon to checkmark

                // 2. Animate the button (subtle pop effect)
                btn.style.transform = 'scale(1.05)';
                setTimeout(() => btn.style.transform = 'scale(1)', 150);

                // 3. Revert after 2 seconds
                setTimeout(() => {
                    btn.classList.remove('bg-green-600', 'text-white', 'border-green-600');
                    btn.classList.add('text-[#1A1A1A]', 'hover:bg-black');
                    text.innerText = 'Copy';
                    icon.className = 'ph-bold ph-copy';
                    btn.style.transform = '';
                }, 2000);
            });
        }
    </script>
        </body>

        </html>