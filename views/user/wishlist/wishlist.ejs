<%- include('../../partials/header') %>
    <body class="font-display">
        <div
            class="relative flex h-auto min-h-[90vh] w-full flex-col bg-background-light group/design-root overflow-x-hidden"
        >
            <div class="layout-container flex h-full grow flex-col">
                <div
                    class="px-4 sm:px-10 md:px-20 lg:px-40 flex flex-1 justify-center py-5"
                >
                    <div
                        class="layout-content-container flex flex-col max-w-[960px] flex-1"
                    >
                        <!-- PageHeading and Share Button -->
                        <div
                            class="flex flex-wrap justify-between gap-3 p-4 items-center"
                        >
                            <p
                                class="text-[#141414] text-4xl font-black leading-tight tracking-[-0.033em] min-w-72"
                            >
                                My Wishlist
                            </p>
                            <button
                                class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-[#f2f2f2] text-[#141414] text-sm font-bold leading-normal tracking-[0.015em]"
                            >
                                <span class="truncate">Share Wishlist</span>
                            </button>
                        </div>
                        <!-- Breadcrumbs -->
                        <div class="flex flex-wrap gap-2 px-4 pb-4">
                            <a
                                class="text-[#757575] text-base font-medium leading-normal"
                                href="#"
                                >Home</a
                            >
                            <span
                                class="text-[#757575] text-base font-medium leading-normal"
                                >/</span
                            >
                            <span
                                class="text-[#141414] text-base font-medium leading-normal"
                                >My Wishlist</span
                            >
                        </div>
                        <!-- Wishlist with items -->
                        <div
                            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"
                        >
                            <!-- Product Card 1 -->
                             <% wishlistItems.forEach((item, index) => { %>
                            <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">
    
                                <!-- Image section -->
                                <div class="w-full aspect-square overflow-hidden">
                                    <img
                                        src="<%= item.product.productImages[0] %>"
                                        alt="<%= item.product.name %>"
                                        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                    />
                                </div>

                                <!-- Content section -->
                                <div class="p-4 flex flex-col gap-2">
                                    <p class="text-lg font-bold text-[#141414] line-clamp-2">
                                        <%= item.product.name %>
                                    </p>

                                    <p class="text-sm text-gray-600">
                                        Size: <%= variants[index].size %>
                                    </p>

                                    <div class="flex items-center gap-2 mt-1">
                                        <% if (variants[index].offerPrice) { %>
                                            <span class="text-lg font-bold text-green-600">
                                                ₹<%= variants[index].offerPrice %>
                                            </span>
                                            <span class="text-sm line-through text-gray-400">
                                                ₹<%= variants[index].price %>
                                            </span>
                                        <% } else { %>
                                            <span class="text-lg font-bold">
                                                ₹<%= variants[index].price %>
                                            </span>
                                        <% } %>
                                    </div>

                                    <!-- Actions -->
                                    <div class="mt-3 flex flex-col gap-2">
                                        <form action="/cart/add" method="post">
                                            <input type="hidden" name="productId" value="<%= item.product._id %>">
                                            <input type="hidden" name="variantId" value="<%= variants[index]._id %>">
                                            <input type="hidden" name="quantity" value="1">

                                            <button type="submit"
                                                class="w-full h-10 rounded-lg bg-black text-white font-semibold hover:bg-gray-900">
                                                Add to Cart
                                            </button>
                                        </form>
                                        <button class="h-10 rounded-lg border font-semibold hover:bg-gray-100">
                                            Remove
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Card 2 -->
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <%- include('../../partials/footer') %>
    </body>
</html>


