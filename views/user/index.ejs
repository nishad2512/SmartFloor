</html>
<script>
    (function () {
        const searchToggleBtn = document.getElementById("searchToggleBtn");
        const searchWrapper = document.getElementById("searchWrapper");
        const searchInput = document.getElementById("searchInput");
        const clearSearchBtn = document.getElementById("clearSearchBtn");
        const mobileOverlay = document.getElementById("mobileSearchOverlay");
        const mobileInput = document.getElementById("mobileSearchInput");
        const mobileClear = document.getElementById("mobileClearBtn");
        const mobileClose = document.getElementById("mobileCloseBtn");

        if (!searchToggleBtn) return;

        function openInline() {
            if (searchWrapper) {
                searchWrapper.classList.remove("hidden");
                setTimeout(() => searchInput && searchInput.focus(), 50);
            }
        }

        function closeInline() {
            if (searchWrapper) searchWrapper.classList.add("hidden");
        }

        function openMobile() {
            if (mobileOverlay) {
                mobileOverlay.classList.remove("hidden");
                mobileOverlay.classList.add("flex");
                setTimeout(() => mobileInput && mobileInput.focus(), 50);
            }
        }

        function closeMobile() {
            if (mobileOverlay) {
                mobileOverlay.classList.add("hidden");
                mobileOverlay.classList.remove("flex");
            }
        }

        searchToggleBtn.addEventListener("click", (e) => {
            e.stopPropagation();
            const isMobile = window.innerWidth < 768; // md breakpoint
            if (isMobile) {
                openMobile();
            } else {
                if (searchWrapper && searchWrapper.classList.contains("hidden")) openInline();
                else closeInline();
            }
        });

        // Inline clear
        if (clearSearchBtn) {
            clearSearchBtn.addEventListener("click", (e) => {
                e.preventDefault();
                if (searchInput) searchInput.value = "";
                closeInline();
            });
        }

        // Mobile clear/close
        if (mobileClear) {
            mobileClear.addEventListener("click", (e) => {
                e.preventDefault();
                if (mobileInput) mobileInput.value = "";
                closeMobile();
            });
        }
        if (mobileClose) {
            mobileClose.addEventListener("click", (e) => {
                e.preventDefault();
                closeMobile();
            });
        }

        // Click outside closes both
        document.addEventListener("click", (e) => {
            if (window.innerWidth >= 768) {
                if (
                    searchWrapper &&
                    !searchWrapper.contains(e.target) &&
                    !searchToggleBtn.contains(e.target)
                ) {
                    closeInline();
                }
            } else {
                if (mobileOverlay && !mobileOverlay.contains(e.target) && !searchToggleBtn.contains(e.target)) {
                    closeMobile();
                }
            }
        });

        // Escape hides
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape") {
                closeInline();
                closeMobile();
            }
        });
    })();
</script>
